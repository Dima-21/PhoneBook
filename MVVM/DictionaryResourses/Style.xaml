<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:MVVM.DictionaryResourses">
    <Style x:Key="baseFont">
        <Setter Property="Control.FontFamily" Value="Trebuchet MS" />
        <Setter Property="Control.FontSize" Value="16"/>
    </Style>
    <Style TargetType="GroupBox" BasedOn="{StaticResource baseFont}">
        <Setter Property="Width" Value="450"/>
        <Setter Property="Padding" Value="15"/>
        <Setter Property="Margin" Value="5"/>
    </Style>
    <Style TargetType="Button" BasedOn="{StaticResource baseFont}">
        <Setter Property="Height" Value="40"/>
        <Setter Property="Width" Value="125"/>
        <Setter Property="Margin" Value="5"/>
    </Style>
</ResourceDictionary>